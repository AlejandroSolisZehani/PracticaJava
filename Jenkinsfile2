import java.time.LocalDate
def informatico = 'Quise ligar con una informatica pero no se de JAVA asi que ella no se deJAVA'
def negro = 'Que hace un ni√±o en un columpio en siria marear al francotirador'
def futbol = 'Va el delantero tira y le da en la cara al portero'
def medicos = 'Ha sido operado de apendicitis lo bueno es que ya no le va a volver a dar'
def politicos = 'Van 2 politicos y no roban'
def dia = LocalDate.now()
pipeline{
    agent any
    stages{
        stage('AA12'){
            steps{
                script{
                    def diasemana = dia.getDayOfWeek()
                    switch(diasemana){
                        case 'MONDAY':
                            println futbol
                            break
                        case  'TUESDAY':
                            println politicos
                            break
                        case 'WEDNESDAY':
                            println medicos
                            break
                        case 'THURSDAY':
                            println informatico
                            break
                        case 'FRIDAY':
                            println negro
                            break
                        default:
                            println 'No es ningun dia'
                        break
                }
                    
            }
        }
    }
}
}
